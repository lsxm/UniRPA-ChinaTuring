<Window x:Class="UniStudio.Community.Windows.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="数据定义" Height="395.0" Width="545.0" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBox x:Name="TextBox" Margin="0,0,0,0" Padding="0" TextWrapping="Wrap" FontSize="14" Focusable="True" BorderThickness="0" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"/>
        </Grid>
        <Grid Grid.Row="1">
            <Button x:Name="OkButton" Style="{StaticResource ToolBarButtonStyle}"  Width="80" Content="确定" IsDefault="True" HorizontalAlignment="Right" Margin="0,0,110,0" Click="OkButton_OnClick"></Button>
            <Button x:Name="CancelButton" Style="{StaticResource ToolBarButtonStyle}"  Width="80" Content="取消" IsDefault="True" HorizontalAlignment="Right" Margin="0,0,15,0" Click="CancelButton_OnClick"></Button>
        </Grid>
    </Grid>
</Window>
